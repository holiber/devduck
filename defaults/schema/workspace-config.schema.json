{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://devduck.dev/schema/workspace-config.schema.json",
  "title": "DevDuck Workspace Config (YAML format)",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "version": { "type": ["integer", "string"], "description": "Schema version" },
    "name": { "type": "string" },
    "devduck_path": { "type": "string", "description": "Path to DevDuck sources (relative to workspace root)" },
    "extends": {
      "type": "array",
      "items": { "type": "string" },
      "description": "List of config files to extend from. Supports 'devduck:<relative-path>' syntax."
    },
    "repos": { "type": "array", "items": { "type": "string" } },
    "modules": { "type": "array", "items": { "type": "string" } },
    "moduleSettings": { "type": "object", "additionalProperties": true },
    "projects": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["src"],
        "properties": {
          "src": { "type": "string" },
          "description": { "type": "string" },
          "checks": { "$ref": "#/$defs/checks" }
        }
      }
    },
    "checks": { "$ref": "#/$defs/checks" },
    "env": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["name"],
        "properties": {
          "name": { "type": "string" },
          "default": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },
    "taskfile": { "$ref": "#/$defs/taskfile" }
  },
  "$defs": {
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["name"],
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "tier": { "type": "string" },
          "skip": { "type": "boolean" },
          "test": { "type": "string" },
          "install": { "type": "string" },
          "mcpSettings": { "type": "object", "additionalProperties": true }
        }
      }
    },
    "taskfile": {
      "type": "object",
      "description": "Taskfile configuration for generated .cache/taskfile.generated.yml",
      "additionalProperties": true,
      "properties": {
        "vars": {
          "type": "object",
          "description": "Taskfile variables",
          "additionalProperties": { "type": "string" }
        },
        "tasks": {
          "type": "object",
          "description": "Taskfile tasks",
          "additionalProperties": {
            "type": "object",
            "additionalProperties": true,
            "properties": {
              "desc": { "type": "string" },
              "cmds": {
                "type": "array",
                "items": {
                  "oneOf": [
                    { "type": "string" },
                    {
                      "type": "object",
                      "properties": { "task": { "type": "string" } },
                      "additionalProperties": true
                    }
                  ]
                }
              },
              "deps": {
                "type": "array",
                "items": {
                  "oneOf": [
                    { "type": "string" },
                    {
                      "type": "object",
                      "properties": { "task": { "type": "string" } },
                      "additionalProperties": true
                    }
                  ]
                }
              }
            }
          }
        }
      }
    }
  }
}

