{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://barducks.dev/schema/workspace-config.schema.json",
  "title": "Barducks Workspace Config (YAML nadformat)",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "version": { "type": ["integer", "string"], "description": "Schema version (nadformat)" },
    "name": { "type": "string" },
    "barducks_path": { "type": "string", "description": "Path to Barducks sources (relative to workspace root)" },
    "repos": { "type": "array", "items": { "type": "string" } },
    "extensions": { "type": "array", "items": { "type": "string" } },
    "extensionSettings": { "type": "object", "additionalProperties": true },
    "projects": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["src"],
        "properties": {
          "src": { "type": "string" },
          "description": { "type": "string" },
          "checks": { "$ref": "#/$defs/checks" }
        }
      }
    },
    "checks": { "$ref": "#/$defs/checks" },
    "env": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["name"],
        "properties": {
          "name": { "type": "string" },
          "default": { "type": "string" },
          "description": { "type": "string" }
        }
      }
    },
    "extends": {
      "type": "array",
      "items": { "type": "string" },
      "description": "Optional list of taskfile fragments (not interpreted by Barducks yet)"
    }
  },
  "$defs": {
    "checks": {
      "type": "array",
      "items": {
        "type": "object",
        "additionalProperties": true,
        "required": ["name"],
        "properties": {
          "name": { "type": "string" },
          "description": { "type": "string" },
          "tier": { "type": "string" },
          "skip": { "type": "boolean" },
          "when": { "type": "string", "description": "Shell condition to decide whether to run the check (non-zero => skip)" },
          "test": { "type": "string" },
          "install": { "type": "string" },
          "requirement": {
            "type": "string",
            "description": "Check requirement level: required (default), recomended, optional",
            "enum": ["required", "recomended", "optional"]
          },
          "mcpSettings": { "type": "object", "additionalProperties": true }
        }
      }
    }
  }
}

