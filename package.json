{
  "name": "barducks",
  "version": "0.3.0",
  "description": "AI assistant integration for Cursor IDE in Yandex Arcadia",
  "private": true,
  "type": "module",
  "bin": {
    "barducks": "./bin/barducks.js",
    "create-barducks-workspace": "./bin/barducks.js"
  },
  "scripts": {
    "install:check": "tsx scripts/install.ts",
    "postinstall": "npx playwright install chromium",
    "barducks:service": "tsx scripts/barducks-service/service.ts",
    "barducks:launch": "tsx scripts/barducks-service/cli.ts",
    "test": "npm run test:unit && npm run test:e2e",
    "test:unit": "tsx scripts/run-tests.ts",
    "test:e2e": "npm run test:installer:pw",
    "test:pw": "playwright test -c tests/installer/playwright.config.ts",
    "test:installer:pw": "playwright test -c tests/installer/playwright.config.ts",
    "test:smoke": "playwright test -c tests/installer/playwright.config.ts --grep @smoke"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.25.1",
    "@playwright/test": "^1.57.0",
    "@trpc/client": "^11.8.1",
    "@trpc/server": "^11.8.1",
    "compare-versions": "^6.1.1",
    "dotenv": "^16.4.7",
    "ink": "^5.1.0",
    "ink-text-input": "^6.0.0",
    "playwright": "^1.57.0",
    "react": "^18.3.1",
    "execa": "^9.6.0",
    "fs-extra": "^11.3.2",
    "pretty-bytes": "^7.1.0",
    "tsx": "^4.19.0",
    "yaml": "^2.8.1",
    "yargs": "^18.0.0",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "c8": "^10.1.3",
    "jscpd": "^4.0.5",
    "typescript": "^5.6.0"
  }
}
