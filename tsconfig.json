{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "baseUrl": ".",
    "paths": {
      "@barducks/sdk": ["packages/sdk/src/index.ts"],
      "@barducks/core": ["packages/core/src/index.ts"],
      "@barducks/cli": ["packages/cli/src/index.ts"],
      "@barducks/test-utils": ["packages/test-utils/src/index.ts"]
    },
    "lib": ["ES2022"],
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "types": ["node"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*", "scripts/**/*", "extensions/**/*", "packages/**/*", "tests/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.js"]
}

